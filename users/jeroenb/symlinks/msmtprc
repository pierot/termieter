defaults
tls on
logfile ~/.msmtp.log

account jeroen@jackjoe.be
host smtp.gmail.com
port 587
protocol smtp
auth on
from jeroen@jackjoe.be
user jeroen@jackjoe.be
tls on
tls_trust_file /usr/local/etc/openssl/cert.pem

account jeroen.bourgois@antenno.be
host smtp.office365.com
port 587
protocol smtp
auth on
from jeroen.bourgois@antenno.be
user jeroen.bourgois@antenno.be
tls on
tls_trust_file /usr/local/etc/openssl/cert.pem

account default : jeroen@jackjoe.be
