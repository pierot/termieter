XF86AudioLowerVolume
  pactl set-sink-volume @DEFAULT_SINK@ -4dB

XF86AudioRaiseVolume
  pactl set-sink-volume @DEFAULT_SINK@ +4dB

XF86AudioMute
	pactl set-sink-mute 0 toggle

XF86MonBrightnessDown
	xbacklight -dec 5

XF86MonBrightnessUp
	xbacklight -inc 5

XF86AudioPlay
  playerctl play-pause

XF86AudioNext
  playerctl next

XF86AudioPrev
  playerctl previous

