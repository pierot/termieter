super + o ; {w,t,m,f}
	{firefox,thunderbird,spotify,pcmanfm}

super + o; s
  slack &

super + s; s
  sudo systemctl suspend

super + Pause
  sudo systemctl suspend
 
super + shift + e
  dmenupower 

super + shift + e; r
  sudo systemctl reboot 

Print
  scrot -s ~/Dropbox/Screenshots/screenshot-$(date +%F_%T).png -e 'xclip -selection c -t image/png < $f'

super + Print
  scrot ~/Dropbox/Screenshots/screenshot-$(date +%F_%T).png -e 'xclip -selection c -t image/png < $f'

super m; p
  playerctl previous

super m; n
  playerctl next

super m; space
  playerctl play-pause

XF86AudioLowerVolume
	amixer -c 0 set Master 1dB-

XF86AudioRaiseVolume
	amixer -c 0 set Master 1dB+

XF86AudioMute
	pactl set-sink-mute 0 toggle

XF86MonBrightnessDown
	xbacklight -dec 5

XF86MonBrightnessUp
	xbacklight -inc 5

super m; m
	feh -F ~/Dropbox/Jack-Joe/Resources/varia/mysql-cheat-sheet.png
