set $lbluecolor  #5fd4ff

#                         border              background              text          indicator
client.focused            $bgcolor            $ibgcolor               $itextcolor    $bgcolor
client.unfocused          $bgcolor            $ibgcolor               $itextcolor   $ibgcolor
client.focused_inactive   $bgcolor            $bgcolor                $textcolor    $bgcolor
client.urgent             $ubgcolor           $ubgcolor               $textcolor    $ubgcolor

bar {
    status_command SCRIPT_DIR=/home/jeroen/.config/i3blocks i3blocks
    position top
    tray_output HDMI-0 
    separator_symbol "|"
    # mode dock
    # hidden_state hide
    # modifier Mod1
    colors {
        background                $ibgcolord
        separator                 $itextcolor 
        #                         border              background              text
        focused_workspace         $bgcolor            $bgcolor                $textcolor
        inactive_workspace        $ibgcolor           $ibgcolor               $itextcolor
        urgent_workspace          $ubgcolor           $ubgcolor               $textcolor
    }
}

