#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

msg="I dare you. I double dare you."

case "$(printf "ğŸ”’ lock\nğŸ’¤ sleep\nğŸ”ƒ reboot\nğŸ–¥ï¸shutdown\nğŸ“º display off\nTEST" | dmenu -fn 'JetBrainsMono Nerd Font Mono-12' -nb '#000000' -i -p 'Action: ')" in
	'ğŸ”’ lock') slock -m "${msg}" ;;
	'ğŸ’¤ sleep') slock -m "${msg}" $ctl suspend -i ;;
	'ğŸ”ƒ reboot') $ctl reboot ;;
	'ğŸ–¥ï¸shutdown') $ctl poweroff ;;
	'ğŸ“º display off') xset dpms force off ;;
	*) exit 1 ;;
esac
