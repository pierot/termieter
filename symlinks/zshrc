source $HOME/.termieter/env

export SHELL=/bin/zsh
export ZSH=$TRM/zsh/oh-my-zsh

# Set custom zsh directory
ZSH_CUSTOM="$TRM/zsh/custom"

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
if [[ $OS == 'OSX' ]]; then
  ZSH_THEME="kolo"
else
  ZSH_THEME="dallas"
fi

# Uncomment following line if you want to disable autosetting terminal title.
DISABLE_AUTO_TITLE="true"

# Uncomment following line if you want red dots to be displayed while waiting for completion
COMPLETION_WAITING_DOTS="true"

# When listing options (by `setopt', `unsetopt', `set -o' or `set +o'),
# those turned on by default appear in the list prefixed with `no'.
# Hence (unless KSH_OPTION_PRINT is set), `setopt' shows all options
# whose settings are changed from the default.
#
# Report the status of background jobs immediately, rather than
# waiting until just before printing a prompt.
setopt notify

# Save timestamp in history
setopt extendedhistory
# Appends every command to the history file once it is executed
setopt inc_append_history
# Reloads the history whenever you use it
setopt share_history

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
plugins=(urltools gitfast docker vi-mode)

if [[ $OS == 'OSX' ]]; then
  plugins+=(ansible composer git gitfast npm yarn go mix-fast)

  alias dircolors='gdircolors'
else
  plugins+=(debian)
fi

# initialize autocomplete here, otherwise functions won't be loaded
autoload -U compinit
compinit

zstyle ':completion:*' menu yes=long select
zstyle ':completion:*' use-cache yes
zstyle ':completion:*:functions' ignored-patterns '_*'

# Colors for ls and autocompletion
eval $( dircolors -b $ZSH/../LS_COLORS )
zstyle ':completion:*:default'            list-colors ${(s.:.)LS_COLORS}

[ -f $HOME/.zshrc.local ] && source $HOME/.zshrc.local
source $ZSH/oh-my-zsh.sh
source $TRM/zsh/base.sh

alias reload!='. $HOME/.zshrc'

# tabtab source for serverless package
# uninstall by removing these lines or running `tabtab uninstall serverless`
[[ -f /Users/pieterm/Work/jackjoe/menage-pdf/node_modules/tabtab/.completions/serverless.zsh ]] && . /Users/pieterm/Work/jackjoe/menage-pdf/node_modules/tabtab/.completions/serverless.zsh
# tabtab source for sls package
# uninstall by removing these lines or running `tabtab uninstall sls`
[[ -f /Users/pieterm/Work/jackjoe/menage-pdf/node_modules/tabtab/.completions/sls.zsh ]] && . /Users/pieterm/Work/jackjoe/menage-pdf/node_modules/tabtab/.completions/sls.zsh
# tabtab source for slss package
# uninstall by removing these lines or running `tabtab uninstall slss`
[[ -f /Users/pieterm/Work/jackjoe/menage-pdf/node_modules/tabtab/.completions/slss.zsh ]] && . /Users/pieterm/Work/jackjoe/menage-pdf/node_modules/tabtab/.completions/slss.zsh

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

export PATH="$HOME/.yarn/bin:$HOME/.config/yarn/global/node_modules/.bin:$PATH"
