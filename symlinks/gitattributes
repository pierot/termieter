* whitespace=!indent,trail,space
*.sh whitespace=indent,trail,space eol=lf
*.bat eol=crlf

*.[ch] whitespace=indent,trail,space diff=cpp

*.perl eol=lf diff=perl
*.pl eof=lf diff=perl
*.pm eol=lf diff=perl

*.py eol=lf diff=python

*.c     diff=cpp
*.h     diff=cpp
*.c++   diff=cpp
*.h++   diff=cpp
*.cpp   diff=cpp
*.hpp   diff=cpp
*.cc    diff=cpp
*.hh    diff=cpp
*.cs    diff=csharp
*.css   diff=css
*.html  diff=html
*.xhtml diff=html
*.ex    diff=elixir
*.exs   diff=elixir
*.go    diff=golang
*.php   diff=php
*.pl    diff=perl
*.py    diff=python
*.md    diff=markdown
*.rb    diff=ruby
*.rake  diff=ruby
*.rs    diff=rust
*.lisp  diff=lisp
*.el    diff=lisp
*.js    diff=javascript
*.ts    diff=javascript
